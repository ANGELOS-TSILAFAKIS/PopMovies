<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.tiagohs.popmovies">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />

        <activity android:name=".view.activity.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.facebook.FacebookActivity"
            android:configChanges="keyboard|keyboardHidden|screenLayout|screenSize|orientation"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.Translucent.NoTitleBar" />
        <activity android:name=".view.activity.HomeActivity" />
        <activity
            android:name=".view.activity.MovieDetailActivity"
            android:label="@string/title_activity_movie_detail"
            android:parentActivityName=".view.activity.HomeActivity" />
        <activity
            android:name=".view.activity.SearchActivity"
            android:label="@string/title_activity_search"
            android:launchMode="singleTop"
            android:parentActivityName=".view.activity.HomeActivity"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="br.com.tiagohs.popmovies.view.activity.HomeActivity" />
        </activity>
        <activity
            android:name=".view.activity.GenresActivity"
            android:label="@string/title_activity_genres"
            android:parentActivityName=".view.activity.HomeActivity" />
        <activity
            android:name=".view.activity.ListsDefaultActivity"
            android:label="@string/title_activity_list_movies_default"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".view.activity.PersonDetailActivity"
            android:label="@string/title_activity_actor_details" />
        <activity
            android:name=".view.activity.WebViewActivity"
            android:label="@string/title_activity_actor_details" />
        <activity
            android:name=".view.activity.WallpapersDetailActivity"
            android:label="@string/title_activity_wallpapers_details" />
        <activity
            android:name=".view.activity.WallpapersActivity"
            android:label="@string/title_activity_wallpapers" />
        <activity
            android:name=".view.activity.PerfilActivity"
            android:label="@string/title_activity_perfil"
            android:parentActivityName=".view.activity.HomeActivity"
            android:theme="@style/AppTheme" />
    </application>

</manifest>