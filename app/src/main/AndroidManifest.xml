<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="br.com.tiagohs.popmovies">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".view.activity.ListMoviesActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".view.activity.MovieDetailActivity"
            android:label="@string/title_activity_movie_detail"
            android:parentActivityName=".view.activity.ListMoviesActivity"
            android:theme="@style/AppTheme">
        </activity>
        <activity
            android:name=".view.activity.SearchActivity"
            android:label="@string/title_activity_search"
            android:launchMode="singleTop"
            android:parentActivityName=".view.activity.ListMoviesActivity"
            android:theme="@style/AppTheme">
            <intent-filter>
                <action android:name="android.intent.action.SEARCH"/>
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable"/>
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="br.com.tiagohs.popmovies.view.activity.ListMoviesActivity"/>
        </activity>
        <activity
            android:name=".view.activity.GenresActivity"
            android:label="@string/title_activity_genres"
            android:parentActivityName=".view.activity.ListMoviesActivity"
            android:theme="@style/AppTheme">
        </activity>
        <activity
            android:name=".view.activity.MoviesByGenreActivity"
            android:label="@string/title_activity_movies_by_genre"
            android:parentActivityName=".view.activity.ListMoviesActivity"
            android:theme="@style/AppTheme">
        </activity>

        <activity
            android:name=".view.activity.PersonDetailActivity"
            android:label="@string/title_activity_actor_details"
            android:parentActivityName=".view.activity.ListMoviesActivity"
            android:theme="@style/AppTheme">
        </activity>
    </application>

</manifest>