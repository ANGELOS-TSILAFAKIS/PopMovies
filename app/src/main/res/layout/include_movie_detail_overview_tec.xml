<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="16dp">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:shrinkColumns="1">

        <TableRow>

            <LinearLayout
                android:layout_width="72dp"
                android:layout_height="70dp"
                android:orientation="vertical"
                android:gravity="top">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_title_original"
                    android:layout_gravity="center_horizontal"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="top"
                android:gravity="top"
                android:orientation="vertical"
                android:layout_weight="0.7">

                <TextView
                    android:id="@+id/label_movie_details_titulo_original"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:fontFamily="sans-serif-light"
                    android:textColor="@color/primary_text"
                    android:text="Título Original"/>

                <TextView
                    android:id="@+id/movie_details_titulo_original"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:maxLines="3"
                    android:textSize="14dp"
                    android:fontFamily="sans-serif-light"
                    android:layout_marginTop="5dp"/>

            </LinearLayout>
        </TableRow>

        <TableRow>

            <LinearLayout
                android:layout_width="72dp"
                android:layout_height="70dp"
                android:orientation="vertical"
                android:gravity="top">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_nomeacoes"
                    android:layout_gravity="center_horizontal"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="top"
                android:gravity="top"
                android:orientation="vertical"
                android:layout_weight="0.7">

                <TextView
                    android:id="@+id/label_movie_nomeacoes"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textSize="14dp"
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:fontFamily="sans-serif-light"
                    android:textColor="@color/primary_text"
                    android:text="Prêmios e Nomeações"/>

                <TextView
                    android:id="@+id/movie_nomeacoes"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:maxLines="3"
                    android:textSize="14dp"
                    android:fontFamily="sans-serif-light"
                    android:layout_marginTop="5dp"/>

            </LinearLayout>
        </TableRow>

        <TableRow>

            <LinearLayout
                android:layout_width="72dp"
                android:layout_height="70dp"
                android:orientation="vertical"
                android:gravity="top">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_money"
                    android:layout_gravity="center_horizontal"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="top"
                android:gravity="top"
                android:orientation="vertical"
                android:layout_weight="0.7">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_gravity="right"
                        android:gravity="left">

                        <TextView
                            android:id="@+id/label_movie_details_orcamento_original"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:textSize="14dp"
                            android:textStyle="bold"
                            android:maxLines="1"
                            android:fontFamily="sans-serif-light"
                            android:textColor="@color/primary_text"
                            android:text="Orçamento:"/>

                        <TextView
                            android:id="@+id/label_movie_details_receita_original"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:textSize="14dp"
                            android:textStyle="bold"
                            android:layout_marginTop="5dp"
                            android:maxLines="1"
                            android:fontFamily="sans-serif-light"
                            android:textColor="@color/primary_text"
                            android:text="Receita:"/>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/movie_details_orcamento_original"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:textSize="14dp"
                            android:textStyle="bold"
                            android:maxLines="1"
                            android:fontFamily="sans-serif-light"/>

                        <TextView
                            android:id="@+id/movie_details_receita_original"
                            android:layout_height="wrap_content"
                            android:layout_width="wrap_content"
                            android:textSize="14dp"
                            android:textStyle="bold"
                            android:maxLines="1"
                            android:layout_marginTop="5dp"
                            android:fontFamily="sans-serif-light"
                            android:gravity="bottom"
                            android:layout_gravity="bottom"/>

                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </TableRow>

        <TableRow>

            <LinearLayout
                android:layout_width="72dp"
                android:layout_height="70dp"
                android:orientation="vertical"
                android:gravity="top">

                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_idioma"
                    android:id="@+id/poster_movie"
                    android:layout_gravity="center_horizontal"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="top"
                android:gravity="top"
                android:orientation="vertical"
                android:layout_weight="0.7">

                <TextView
                    android:id="@+id/label_movie_details_idioma_original"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:maxLines="1"
                    android:fontFamily="sans-serif-light"
                    android:textColor="@color/primary_text"
                    android:text="Idioma Original"/>

                <TextView
                    android:id="@+id/movie_details_idioma_original"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:maxLines="3"
                    android:textSize="15dp"
                    android:fontFamily="sans-serif-light"
                    android:layout_marginTop="5dp"/>

            </LinearLayout>
        </TableRow>
    </TableLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/keywords_recycler_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center|center_horizontal"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp"
            android:minHeight="30dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.balysv.materialripple.MaterialRippleLayout
            android:id="@+id/movie_deails_item_default_riple"
            app:mrl_rippleColor="@color/secondary_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:mrl_rippleOverlay="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:textColor="@color/primary_text"
                    android:layout_marginLeft="16dp"
                    android:text="@string/titles_movie_detail_tecnico_cast"
                    android:fontFamily="sans-serif-condensed"
                    android:layout_weight="0.85"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"

                    android:layout_marginRight="16dp"
                    android:gravity="center"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="@string/label_mais"
                    android:fontFamily="sans-serif-condensed"
                    android:layout_weight="0.15"/>

            </LinearLayout>

        </com.balysv.materialripple.MaterialRippleLayout>


        <android.support.v7.widget.RecyclerView
            android:id="@+id/elenco_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="30dp">

        <com.balysv.materialripple.MaterialRippleLayout
            android:id="@+id/equipe_tecnica_riple"
            app:mrl_rippleColor="@color/secondary_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:mrl_rippleOverlay="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:textColor="@color/primary_text"
                    android:layout_marginLeft="16dp"
                    android:text="@string/titles_movie_detail_tecnico_crew"
                    android:fontFamily="sans-serif-condensed"
                    android:layout_weight="0.85"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"

                    android:layout_marginRight="16dp"
                    android:gravity="center"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="@string/label_mais"
                    android:fontFamily="sans-serif-condensed"
                    android:layout_weight="0.15"/>

            </LinearLayout>

        </com.balysv.materialripple.MaterialRippleLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/equipe_tecnica_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </LinearLayout>

</LinearLayout>