<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_gravity="bottom"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="160dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <FrameLayout
            android:layout_gravity="top|center|left"
            android:background="@android:color/white"
            android:padding="0.5dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6.0dip">

            <ImageView
                android:id="@+id/poster_movie"
                android:layout_width="112dp"
                android:layout_height="145dp"
                android:scaleType="centerCrop"
                android:transitionName="@string/poster_movie"/>

        </FrameLayout>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_gravity="top"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginRight="2dp"
                        android:src="@drawable/ic_data"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/ano_lancamento_movie"
                        android:fontFamily="sans-serif-light"
                        android:textSize="13dp"
                        android:layout_gravity="center|center_vertical"
                        android:textColor="@color/secondary_text"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/duracao_movie_container"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingTop="10dp"
                    android:layout_marginLeft="10dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:layout_marginRight="2dp"
                        android:src="@drawable/ic_relogio"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/duracao_movie"
                        android:fontFamily="sans-serif-light"
                        android:textSize="13dp"
                        android:layout_gravity="center|center_vertical"
                        android:textColor="@color/secondary_text"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:id="@+id/movie_info_wrapper"
                android:paddingLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:textSize="20dp"
                    android:textColor="@color/primary_text"
                    android:id="@+id/title_movie"
                    android:paddingBottom="2dip"
                    android:layout_width="match_parent"
                    android:layout_height="35dip"
                    android:layout_marginRight="10dip"
                    android:singleLine="true"
                    android:fontFamily="sans-serif-condensed"
                    android:ellipsize="marquee"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:marqueeRepeatLimit ="marquee_forever"
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:scrollHorizontally="true" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/diretores_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="30dp"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>