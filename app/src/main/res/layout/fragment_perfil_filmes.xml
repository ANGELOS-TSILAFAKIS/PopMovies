<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="fill_vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior">

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="vertical">

        <com.balysv.materialripple.MaterialRippleLayout
            android:id="@+id/perfil_favoritos_riple"
            app:mrl_rippleColor="@color/secondary_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:mrl_rippleOverlay="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.85">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|center_vertical"
                        android:textColor="@color/primary_text"
                        android:text="Favoritos"
                        android:textStyle="bold"
                        android:textSize="16dp"
                        android:fontFamily="sans-serif-light"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|center_vertical"
                        android:textColor="@color/primary_text"
                        android:text="Seus filmes favoritos"
                        android:fontFamily="sans-serif-light"
                        android:textSize="12dp"
                        android:layout_weight="0.85"/>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="16dp"
                    android:gravity="center"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="@string/label_mais"
                    android:fontFamily="sans-serif-condensed"
                    android:layout_weight="0.15"/>

            </LinearLayout>

        </com.balysv.materialripple.MaterialRippleLayout>

        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/container_perfil_favoritos"
            android:minHeight="200dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <com.balysv.materialripple.MaterialRippleLayout
            android:id="@+id/perfil_assistidos_riple"
            app:mrl_rippleColor="@color/secondary_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:mrl_rippleOverlay="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.85">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|center_vertical"
                        android:textColor="@color/primary_text"
                        android:text="Assistidos"
                        android:textStyle="bold"
                        android:textSize="16dp"
                        android:fontFamily="sans-serif-light"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="left|center_vertical"
                        android:textColor="@color/primary_text"
                        android:text="Seus filmes assistidos"
                        android:fontFamily="sans-serif-light"
                        android:textSize="12dp"
                        android:layout_weight="0.85"/>

                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center_vertical"
                    android:layout_marginRight="16dp"
                    android:gravity="center"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="@string/label_mais"
                    android:fontFamily="sans-serif-condensed"
                    android:layout_weight="0.15"/>

            </LinearLayout>

        </com.balysv.materialripple.MaterialRippleLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/container_perfil_assistidos"
            android:orientation="vertical"
            android:layout_marginBottom="30dp"/>

    </LinearLayout>

</android.support.v4.widget.NestedScrollView>